# ====================================
# EXEMPLO DE CONFIGURAÇÃO DE AMBIENTE
# ====================================
# Copie este arquivo para .env e configure com seus valores
# NUNCA commite o arquivo .env real!

# ====================================
# AMBIENTE
# ====================================
NODE_ENV=development
PORT=3000

# ====================================
# URLs - MUDE CONFORME O AMBIENTE
# ====================================
# Desenvolvimento local:
APP_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Produção (exemplo):
# APP_URL=https://app.editaliza.com.br
# CLIENT_URL=https://app.editaliza.com.br
# FRONTEND_URL=https://app.editaliza.com.br

# ====================================
# BANCO DE DADOS (CONFIGURAÇÃO DUAL)
# ====================================
# PostgreSQL Local (Recomendado para desenvolvimento)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=editaliza_dev
DB_USER=postgres
DB_PASSWORD=sua_senha_local

# ====================================
# CONTROLE DE BANCO DE DADOS
# ====================================
# Forçar uso de um banco específico (opcional)
# FORCE_SQLITE=true     # Força SQLite sempre
# FORCE_POSTGRES=true   # Força PostgreSQL sempre

# ====================================
# CONFIGURAÇÕES DE MIGRAÇÃO
# ====================================
# Logging detalhado de SQL
LOG_SQL=false
LOG_SQL_TRANSLATION=false

# Configurações de pool PostgreSQL
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=60000

# Backup automático
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=6

# ====================================
# REDIS (Sessões)
# ====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================================
# SEGURANÇA E TOKENS
# ====================================
JWT_SECRET=desenvolvimento_jwt_secret_32_caracteres_minimo
JWT_REFRESH_SECRET=desenvolvimento_refresh_secret_32_chars
SESSION_SECRET=desenvolvimento_session_secret_32_chars

# ====================================
# GOOGLE OAUTH
# ====================================
GOOGLE_CLIENT_ID=seu_client_id_aqui
GOOGLE_CLIENT_SECRET=seu_client_secret_aqui
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# ====================================
# EMAIL (SMTP)
# ====================================
EMAIL_FROM=noreply@localhost
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu_email@gmail.com
EMAIL_PASS=sua_senha_de_app

# ====================================
# CONFIGURAÇÕES DE DEBUG
# ====================================
DEBUG=true
LOG_LEVEL=debug

# ====================================
# CORS
# ====================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ====================================
# COOKIES
# ====================================
COOKIE_SECURE=false  # true em produção
COOKIE_DOMAIN=localhost  # .editaliza.com.br em produção
COOKIE_SAME_SITE=lax

# ====================================
# RATE LIMITING
# ====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# BACKUP
# ====================================
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=6