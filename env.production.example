# ============================================================================
# CONFIGURAÇÕES DE PRODUÇÃO - EDITALIZA
# ============================================================================
# ⚠️  SUBSTITUA TODOS OS VALORES ANTES DO DEPLOY
# ============================================================================

# ============================================================================
# CONFIGURAÇÕES DO SERVIDOR
# ============================================================================
NODE_ENV=production
PORT=3000
DOMAIN=https://yourdomain.com

# ============================================================================
# BANCO DE DADOS
# ============================================================================
DATABASE_PATH=/app/data/database.db
DATABASE_URL=sqlite:///app/data/database.db

# ============================================================================
# SEGURANÇA - SESSÕES E JWT
# ============================================================================
# ⚠️  SUBSTITUA POR SECRETS REAIS E SEGUROS
SESSION_SECRET=your-super-secure-session-secret-here-replace-with-actual-secret
JWT_SECRET=your-super-secure-jwt-secret-here-replace-with-actual-secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here-replace-with-actual-secret

# ============================================================================
# CORS E ORIGENS PERMITIDAS
# ============================================================================
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# REDIS (OPCIONAL - PARA SESSÕES)
# ============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-here-replace-with-actual-password

# ============================================================================
# EMAIL (OPCIONAL - PARA RECUPERAÇÃO DE SENHA)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your-app-specific-password-here-replace-with-actual-password

# ============================================================================
# GOOGLE OAUTH (OPCIONAL)
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id-here-replace-with-actual-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret-here-replace-with-actual-client-secret
GOOGLE_CALLBACK_URL=https://yourdomain.com/auth/google/callback

# ============================================================================
# LOGS E MONITORAMENTO
# ============================================================================
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
HEALTH_CHECK_ENABLED=true

# ============================================================================
# SSL/HTTPS
# ============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
